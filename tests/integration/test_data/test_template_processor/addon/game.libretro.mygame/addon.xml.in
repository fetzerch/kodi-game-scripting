<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.mygame"
		name="mygame"
		version="2.10.3"
		provider-name="Libretro">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms></platforms>
		<extensions>ext1|ext2</extensions>
		<supports_vfs>false</supports_vfs>
		<supports_standalone>false</supports_standalone>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en_GB">mygame</summary>
		<description lang="en_GB">Supported files: .ext1, .ext2</description>
		<license></license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.mygame</source>
	</extension>
</addon>
